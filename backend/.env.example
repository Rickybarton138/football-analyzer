# Football Match Analyzer - Environment Configuration

# ===================
# Application Settings
# ===================
DEBUG=true

# ===================
# Cloud Inference
# ===================
# Enable for live real-time analysis (requires cloud GPU)
CLOUD_INFERENCE_ENABLED=false

# Cloud GPU endpoint URL (RunPod, Lambda Labs, AWS, etc.)
CLOUD_INFERENCE_URL=https://api.runpod.ai/v2/YOUR_ENDPOINT/run

# API key for cloud service
CLOUD_API_KEY=your_api_key_here

# Maximum latency for cloud inference (milliseconds)
CLOUD_TIMEOUT_MS=500

# ===================
# Video Processing
# ===================
# FPS for live mode (lower = faster processing)
LIVE_FPS=10

# FPS for post-match analysis (higher = more accurate)
ANALYSIS_FPS=25

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=5000

# ===================
# Detection Settings
# ===================
# Minimum confidence for player detection
DETECTION_CONFIDENCE=0.5

# Minimum confidence for tracking
TRACKING_CONFIDENCE=0.4

# ===================
# Pitch Dimensions (in meters)
# ===================
PITCH_LENGTH=105
PITCH_WIDTH=68

# ===================
# Analytics Thresholds
# ===================
# Speed threshold for sprint detection (km/h)
SPRINT_THRESHOLD_KMH=25.0

# Speed threshold for high intensity running (km/h)
HIGH_INTENSITY_THRESHOLD_KMH=19.0

# Distance to trigger pressing alert (meters)
PRESSING_DISTANCE_M=5.0

# ===================
# Local Processing
# ===================
# Set to true if you have a CUDA-capable GPU
USE_GPU=false

# Number of CPU threads for processing
CPU_THREADS=4

# ===================
# Optional: Redis Cache
# ===================
# REDIS_URL=redis://localhost:6379
